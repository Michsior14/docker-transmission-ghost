    "trash-original-torrent-files": false,
    "umask": 2,
    "upload-slots-per-torrent": 200,
    "utp-enabled": true,
    "watch-dir": "/watch",
    "watch-dir-enabled": false
}
HEREDOC
)

CONFIG_STR=${CONFIG_STR/WEBUI_USER/$TRANS_WEBUI_USER}
CONFIG_STR=${CONFIG_STR/WEBUI_PASS/$TRANS_WEBUI_PASS}
